
<div>
    <span class="@GetPriceClasses()" style="@_regularStyle">@(Boardgame.Price.Regular)$</span>
    <span class="@GetDiscountClasses()" style="@_discountedStyle">@((Boardgame.Price.Discount == null) ? "" : Boardgame.Price.Discount.Price)$</span>
</div>

@code {
    [Parameter] public required BoardgameDto Boardgame { get; set; }
    [Parameter] public int FontSizePx { get; set; } = 15;

    private string _regularStyle = "font-size: 15px;";
    private string _discountedStyle = "font-size: 15px;";

    protected override void OnInitialized()
    {
        _regularStyle = $"font-size: {FontSizePx}px;";
        _discountedStyle = $"font-size: {FontSizePx}px;";

        if (Boardgame.Price.Discount != null)
        {
            _regularStyle = $"font-size: {FontSizePx - (FontSizePx/2)}px;";
        }
    }

    private string GetDiscountClasses() => (Boardgame.Price.Discount == null) ? "hide-element" : "red text-bold";

    private string GetPriceClasses() => ((Boardgame.Price.Discount == null)) ? "text-bold" : "text-crossed";
}
