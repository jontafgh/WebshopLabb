<table class="checkout-table">
    <caption>Order summary</caption>
    <thead>
        <tr>
            <th>Product</th>
            <th>ArNr</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var orderLine in Order.OrderLines)
        {
            <tr>
                <td data-label="Product">@orderLine.Name</td>
                <td data-label="ArNr">@orderLine.ArtNr</td>
                <td data-label="Price">@orderLine.Price</td>
                <td data-label="Quantity">@orderLine.Quantity</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3">Total: </th>
            <td>
                @GetTotalPrice()
            </td>
        </tr>
    </tfoot>
</table>

<div>
    <h4>Confirmation email sent to:</h4>
    <p>@Order.Customer.Email</p>
</div>

<div>
    <h4>Order will be sent to:</h4>
    <ul>
        <li>@Order.Customer.FirstName @Order.Customer.LastName</li>
        <li>@Order.Customer.Address.Street</li>
        <li>@Order.Customer.Address.PostalCode @Order.Customer.Address.City</li>
        <li>@Order.Customer.Address.Country</li>
    </ul>
</div>

@code {
    [Parameter] public required OrderDto Order { get; set; }

    private decimal GetTotalPrice() => Order.OrderLines.Sum(x => x.Price * x.Quantity);
}
