<div class="product-grid-item-image padding-x padding-y">
    <img src="@Product.Image.ImageMediumUrl" alt="@Product.Image.ImageText" @onclick="ShowHideLargeImage" />

    <div class="overlay" style="@DisplayStyle" @onclick="ShowHideLargeImage">
        <i class="fa fa-times overlay-close-button" aria-hidden="true"></i>
        <img src="@Product.Image.ImageLargeUrl" alt="@Product.Image.ImageText" @onclick=" ShowHideLargeImage" />
    </div>            
</div>

@code {
    [Parameter] public required IProduct Product { get; set; }

    public string DisplayStyle = "display: none;";

    public void ShowHideLargeImage(MouseEventArgs e)
    {
        DisplayStyle = (DisplayStyle == "display: none;") ? "display: block;" : "display: none;";
    }
}