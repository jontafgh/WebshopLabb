@rendermode InteractiveServer
@using WebshopFrontend.Components.Components

<nav class="nav-menu">
    @if (SideBarShown)
    {
        <div class="nav-menu-close padding-x padding-y">
            <i class="fa fa-times nav-menu-close-button" aria-hidden="true" @onclick="OnHideSideBar"></i>
        </div>
    }

    <NavMenuButton Icon="fa fa-folder-open" Href="products" Text="Products"></NavMenuButton>
    <NavMenuButton Icon="fa fa-credit-card" Href="checkout" Text="Checkout"></NavMenuButton>
    <NavMenuButton Icon="fa fa-user-plus" Href="newuser" Text="New User"></NavMenuButton>
    <NavMenuButton Icon="fa fa-user-circle"  Href="profile" Text="Profile"></NavMenuButton>
    
</nav>

@code {
    [Parameter] public bool SideBarShown { get; set; } = false;
    [Parameter] public EventCallback<MouseEventArgs> OnHideSideBar { get; set; }

}


